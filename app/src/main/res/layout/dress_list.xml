<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/XmlDressImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:contentDescription="@string/dress"
            android:src="@drawable/fbg2" />

        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/XmlName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/harem_pants"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/XmlPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="price : â‚¹650"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/XmlCatogiry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="catogiry : pants"
                android:textColor="#000000"
                android:textSize="20sp" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>